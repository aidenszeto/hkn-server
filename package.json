{
    "scripts": {
        "start": "nodemon app.js",
        "format": "prettier-eslint \"**/*.{js.json}\" --write",
        "lint-staged": "lint-staged"
    },
    "lint-staged": {
        "**/*.{js,json}": [
            "prettier-eslint --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "husky": "^7.0.1",
        "lint-staged": "^11.1.1",
        "nodemon": "^2.0.12",
        "prettier-eslint-cli": "^5.0.1"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1"
    }
}

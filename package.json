{
    "scripts": {
        "start": "nodemon app.js",
        "prepare": "husky install",
        "format": "prettier --write \"**/*.{js,jsx,json,css,md}\"",
        "lint-staged": "lint-staged"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "husky": "^7.0.1",
        "lint-staged": "^11.1.1",
        "nodemon": "^2.0.12",
        "prettier": "^2.3.2"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1"
    }
}
